﻿@{
    ViewData["Title"] = "Login Clientes";
}

    <style>
        :root {
            --primary: #e21b1b;
            --dark: #1D1D1D;
            --light: #ffffff;
            --gray: #f8f8f8;
            --shadow: 0 10px 20px rgba(0,0,0,0.08);
            --hover-shadow: 0 15px 30px rgba(226, 27, 27, 0.15);
        }

        body {
            font-family: 'Poppins', sans-serif;
            margin: 0;
            padding: 0;
            background-color: var(--gray);
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 20px;
        }

        .header {
            background-color: var(--light);
            padding: 25px 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            box-shadow: var(--shadow);
            position: sticky;
            top: 0;
            z-index: 100;
        }

        .header-content {
            display: flex;
            flex-direction: column;
        }

        .header h1 {
            margin: 0;
            font-size: 28px;
            font-weight: 900;
            color: var(--dark);
            letter-spacing: -0.5px;
        }


        .menu-toggle {
            background: none;
            border: none;
            font-size: 24px;
            color: var(--primary);
            width: 48px;
            height: 48px;
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: all 0.3s ease;
        }

            .menu-toggle:hover {
                background-color: rgba(226, 27, 27, 0.1);
            }

        .section {
            margin: 30px 0;
        }

        .section-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
            padding: 0 20px;
        }

        .section-title {
            font-weight: 800;
            font-size: 20px;
            text-transform: uppercase;
            color: var(--dark);
            position: relative;
            padding-left: 12px;
            margin: 0;
        }

            .section-title::before {
                content: '';
                position: absolute;
                left: 0;
                top: 10%;
                height: 80%;
                width: 4px;
                background-color: var(--primary);
                border-radius: 2px;
            }

        .see-all {
            color: var(--primary);
            font-weight: 600;
            font-size: 14px;
            text-decoration: none;
        }

        .promo-carousel {
            display: flex;
            overflow-x: auto;
            gap: 15px;
            padding: 10px 20px 20px;
            scroll-behavior: smooth;
            scrollbar-width: none;
            -ms-overflow-style: none;
        }

            .promo-carousel::-webkit-scrollbar {
                display: none;
            }

        .promo-card {
            flex: 0 0 auto;
            width: 280px;
            height: 160px;
            border-radius: 20px;
            overflow: hidden;
            box-shadow: var(--shadow);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

            .promo-card:hover {
                transform: translateY(-5px);
                box-shadow: var(--hover-shadow);
            }

            .promo-card img {
                width: 100%;
                height: 100%;
                object-fit: cover;
            }

        .divider {
            border: none;
            height: 6px;
            background-color: var(--gray);
            margin: 30px 0;
        }

        .menu-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(160px, 1fr));
            gap: 20px;
            padding: 0 20px;
            justify-content: flex-end;
        }

        .menu-item {
            border-radius: 18px;
            overflow: hidden;
            box-shadow: var(--shadow);
            background-color: var(--light);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            height: 100%;
        }

            .menu-item a {
                text-decoration: none;
                display: flex;
                flex-direction: column;
                height: 100%;
            }

            .menu-item:hover {
                transform: translateY(-8px);
                box-shadow: var(--hover-shadow);
            }

            .menu-item img {
                width: 100%;
                aspect-ratio: 1/1;
                object-fit: cover;
            }

        .menu-item-title {
            padding: 15px 10px;
            font-weight: 700;
            font-size: 15px;
            color: var(--dark);
            text-align: center;
            background: linear-gradient(to top, rgba(248, 248, 248, 0.8), transparent);
            margin-top: auto;
        }

        .footer {
            background: var(--dark);
            color: var(--light);
            padding: 20px;
            text-align: center;
            margin-top: 40px;
            font-size: 14px;
        }

        @@media (min-width: 768px) {
            .menu-grid

        {
            grid-template-columns: repeat(4, 1fr);
        }

        .promo-card {
            width: 320px;
            height: 180px;
        }

        .header {
            padding: 25px 40px;
        }

        }

        @@keyframes fadeIn {
            from

        {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }

        .menu-item {
            animation: fadeIn 0.5s ease forwards;
            opacity: 0;
        }

            .menu-item:nth-child(1) {
                animation-delay: 0.1s;
            }

            .menu-item:nth-child(2) {
                animation-delay: 0.2s;
            }

            .menu-item:nth-child(3) {
                animation-delay: 0.3s;
            }

            .menu-item:nth-child(4) {
                animation-delay: 0.4s;
            }

            .menu-item:nth-child(5) {
                animation-delay: 0.5s;
            }

            .menu-item:nth-child(6) {
                animation-delay: 0.6s;
            }

            .menu-item:nth-child(7) {
                animation-delay: 0.7s;
            }

            .menu-item:nth-child(8) {
                animation-delay: 0.8s;
            }

        .hamburger-menu {
            position: fixed;
            top: 35px;
            right: 35px;
            z-index: 1000;
        }

            .hamburger-menu .nav-menu {
                display: none;
                position: absolute;
                top: 40px;
                right: 0; 
                background-color: #fff;
                border: 1px solid #ddd;
                border-radius: 5px;
                padding: 10px;
                box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
                width: max-content; 
            }

            .hamburger-menu input[type="checkbox"] {
                display: none;
            }

                .hamburger-menu input[type="checkbox"]:checked ~ .nav-menu {
                    display: block;
                }

        .hamburger-icon {
            font-size: 24px;
            cursor: pointer;
            color: #e21b1b;
            text-shadow: 0 0 3px rgba(0, 0, 0, 0.8); 
        }

        .nav-menu a {
            display: block;
            padding: 8px 15px;
            color: #333;
            text-decoration: none;
            text-align: left; 
        }

            .nav-menu a:hover {
                background-color: #f8f9fa;
                color: #C2102B;
            }

        .content-section {
            padding: 50px 0;
            background-color: #f8f9fa;
        }

            .content-section h2 {
                text-align: center;
                margin-bottom: 40px;
                color: #333;
            }

        .menu-item {
            text-align: center;
            margin-bottom: 30px;
        }

            .menu-item img {
                width: 100%;
                max-width: 300px;
                border-radius: 10px;
            }

            .menu-item h4 {
                margin-top: 15px;
                color: #333;
            }

            .menu-item p {
                color: #777;
            }
    </style>


</head>
<body>
    <div class="header">
        <div class="header-content">
            <h1>HOLA, @ViewBag.nombre!</h1>
            <div class="welcome-text">Bienvenido a Foodie</div>
        </div>
        <div class="hamburger-menu">
            <label class="hamburger-icon" for="menu-toggle"><i class="fas fa-bars"></i></label>
            <input type="checkbox" id="menu-toggle" />
            <div class="nav-menu">
                <a asp-area="" asp-controller="Home" asp-action="Index" class="text-dark">Inicio</a>
                <a asp-area="" asp-controller="Orden" asp-action="Index" class="text-dark">Mi Orden</a>
                <a asp-controller="Orden" asp-action="Historial" class="text-dark">Historial</a>
                <a asp-controller="Home" asp-action="Exit" class="text-dark">Cerrar Sesion</a>
                
            </div>
        </div>
    </div>

    <div class="container">
        <div class="section">
            <div class="section-header">
                <h2 class="section-title">PROMOCIONES</h2>
                <a href="#" class="see-all">Ver todas <i class="fas fa-chevron-right" style="font-size: 12px;"></i></a>
            </div>
            <div class="promo-carousel">
                @foreach (var imagen in ViewBag.platosImagenes as List<string>)
                {
                    <div class="promo-card">
                        <img src="@imagen" alt="Promoción especial">
                    </div>
                }
            </div>
        </div>

        <div class="divider"></div>

        <div class="section">
            <div class="section-header">
                <h2 class="section-title">MENÚ</h2>
            </div>
            <div class="menu-grid">
                <div class="menu-item">
                    <a href="@Url.Action("Index", "Menu", new { category = "Hamburguesas" })">
                        <img src="https://images.unsplash.com/photo-1568901346375-23c9450c58cd?q=80&w=1899&auto=format&fit=crop" alt="Hamburguesas">
                        <div class="menu-item-title">Hamburguesas</div>
                    </a>
                </div>
                <div class="menu-item">
                    <a href="@Url.Action("Index", "Menu", new { category = "Pizzas" })">
                        <img src="https://images.unsplash.com/photo-1513104890138-7c749659a591?q=80&w=2070&auto=format&fit=crop" alt="Pizzas">
                        <div class="menu-item-title">Pizzas</div>
                    </a>
                </div>
                <div class="menu-item">
                    <a href="@Url.Action("Index", "Menu", new { category = "Pollo" })">
                        <img src="https://images.unsplash.com/photo-1569691899455-88464f3a0fdd?q=80&w=2089&auto=format&fit=crop" alt="Pollo">
                        <div class="menu-item-title">Pollo</div>
                    </a>
                </div>
                <div class="menu-item">
                    <a href="@Url.Action("Index", "Menu", new { category = "HotDogs" })">
                        <img src="https://images.unsplash.com/photo-1619294541888-56a1e2d9eff4?q=80&w=1965&auto=format&fit=crop" alt="Hot dogs">
                        <div class="menu-item-title">Hot Dogs</div>
                    </a>
                </div>
                <div class="menu-item">
                    <a href="@Url.Action("Index", "Menu", new { category = "Postres" })">
                        <img src="https://images.unsplash.com/photo-1563805042-7684c019e1cb?q=80&w=2127&auto=format&fit=crop" alt="Postres">
                        <div class="menu-item-title">Postres</div>
                    </a>
                </div>
                <div class="menu-item">
                    <a href="@Url.Action("Index", "Menu", new { category = "Bebidas" })">
                        <img src="https://images.unsplash.com/photo-1561758033-d89a9ad46330?q=80&w=2070&auto=format&fit=crop" alt="Bebidas">
                        <div class="menu-item-title">Bebidas</div>
                    </a>
                </div>
                <div class="menu-item">
                    <a href="@Url.Action("Index", "Menu", new { category = "Combos" })">
                        <img src="https://images.unsplash.com/photo-1551782450-17144efb9c50?q=80&w=2069&auto=format&fit=crop" alt="Combos">
                        <div class="menu-item-title">Combos</div>
                    </a>
                </div>
                <div class="menu-item">
                    <a href="@Url.Action("Index", "Menu", new { category = "Promociones" })">
                        <img src="https://images.unsplash.com/photo-1550547660-d9450f859349?q=80&w=1965&auto=format&fit=crop" alt="Promociones">
                        <div class="menu-item-title">Promociones</div>
                    </a>
                </div>
            </div>
        </div>
    </div>
   

    <div class="footer">
        © 2025 Foodie - La mejor comida, cuando quieras, donde quieras.
    </div>
</body>
</html>












